# Samudata Environment Configuration

# Application Settings
APP_NAME=Samudata
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration (untuk implementasi backend)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=samudata
DB_USERNAME=your_username
DB_PASSWORD=your_password

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=pdf,doc,docx,xls,xlsx,zip,jpg,jpeg,png
UPLOAD_PATH=writable/uploads/private

# Security Settings
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_DRIVER=files
SESSION_LIFETIME=120

# Backup Settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=weekly
BACKUP_PATH=backups/

# Map Settings
MAP_CENTER_LAT=-7.5
MAP_CENTER_LNG=112.5
MAP_ZOOM_LEVEL=8

# Email Settings (untuk notifikasi)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Cache Settings
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

